{
    "name": "emcado/welcomebox",
    "description": "Add a Welcome Box for flarum, different for guest and registered users.",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^v2.0.0-beta.1"
    },
    "authors": [
        {
            "name": "Emcado",
            "email": "contact@emcado.com"
        },
        {
            "name": "Jake Wilson",
            "email": "jake@emcado.com",
            "role": "Developer"
        },
        {
            "name": "Marco Colia",
            "email": "info@justoverclock.it",
            "role": "Developer"
        }

    ],
    "autoload": {
        "psr-4": {
            "Justoverclock\\WelcomeBox\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Welcome Box",
            "category": "feature",
            "icon": {
                "name": "fas fa-handshake",
                "backgroundColor": "#E7672E",
                "color": "white"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": true,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": false,
                "prettier": true,
                "typescript": true,
                "bundlewatch": false,
                "frontendTesting": false,
                "backendTesting": false,
                "phpstan": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
